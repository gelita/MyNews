<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:textColorHint="@android:color/darker_gray">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/search_query_term"
            android:backgroundTint="@color/colorPrimary"/>
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:id="@+id/dateRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputSearch"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp">

        <EditText
            android:id="@+id/etDateStart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:autofillHints="@android:string/no"
            android:hint="@string/hint_date"
            android:inputType="date"
            android:background="@android:color/transparent"
            />

        <EditText
            android:id="@+id/etDateEnd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:autofillHints="@android:string/no"
            android:hint="@string/hint_date"
            android:inputType="date"
            android:background="@android:color/transparent"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dateRow"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp">

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/check1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/art"
            android:buttonTint="@color/colorPrimary"/>

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/check2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/business"
            android:buttonTint="@color/colorPrimary"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp">

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/check3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/entrepreneurs"
            android:buttonTint="@color/colorPrimary"/>

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/check4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/politics"
            android:buttonTint="@color/colorPrimary"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row2"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp">

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/check5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/sports"
            app:buttonTint="@color/colorPrimary"/>

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/check6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/travel"
            app:buttonTint="@color/colorPrimary"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row3"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="32dp"
        android:text="@string/search"
        android:backgroundTint="@color/colorPrimary"/>
</RelativeLayout>